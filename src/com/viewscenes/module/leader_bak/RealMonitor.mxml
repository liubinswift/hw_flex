<?xml version="1.0" encoding="utf-8"?>
<system:BasePage xmlns:fx="http://ns.adobe.com/mxml/2009" 
				 xmlns:s="library://ns.adobe.com/flex/spark" 
				 xmlns:mx="library://ns.adobe.com/flex/mx" 
				 xmlns:system="com.morcha4.frame.system.*" 
				 width="100%" height="100%" 
				 creationComplete="init()" xmlns:spectrum="com.viewscenes.module.dailyBusiness.dataAnalyse.spectrum.*" xmlns:quality="com.viewscenes.module.onlineBusiness.realMonitor.quality.*">
	
	<fx:Script>
		<![CDATA[
			private function init():void{
			}
			protected function sszbClick(event:MouseEvent):void{
				sszb.visible=true;
				sszb.includeInLayout=true;
				sspp.visible=false;
				sspp.includeInLayout=false;
			}
			protected function ssppClick(event:MouseEvent):void{
				sszb.visible=false;
				sszb.includeInLayout=false;
				sspp.visible=true;
				sspp.includeInLayout=true;
			}
		]]>
	</fx:Script>
	
	
	<fx:Declarations>
		<!-- 将非可视元素（例如服务、值对象）放在此处 -->
	</fx:Declarations>
	<s:VGroup width="100%" height="100%">
		<s:HGroup width="100%" >
			<s:Button  label="实时指标" click="sszbClick(event)"/>
			<s:Button  label="实时频谱" click="ssppClick(event)"/>
		</s:HGroup>
		<s:HGroup width="100%" height="100%">
			<spectrum:SpectrumScan id="sspp" width="100%" height="100%" visible="false" includeInLayout="false" />
			<quality:QualityScan id="sszb" width="100%" height="100%" />
 		</s:HGroup>
	</s:VGroup>
</system:BasePage>
